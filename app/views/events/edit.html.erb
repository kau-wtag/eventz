<div class="p-8 my-8 ">
  <h1 class="text-3xl font-semibold mb-6 text-gray-900">Edit Event</h1>

  <%= form_with(model: @event, url: event_path(@event), method: :patch, class: "grid grid-cols-2 gap-6") do |form| %>
    <div>
      <%= form.label :name, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.text_field :name, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300", required: true %>
    </div>

    <div>
      <%= form.label :description, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.text_area :description, class: "form-textarea w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300", rows: 4, required: true %>
    </div>

    <div>
      <%= form.label :location, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.text_field :location, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300", required: true %>
    </div>

    <div>
      <%= form.label :price, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.number_field :price, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300", required: true %>
    </div>

    <div>
      <%= form.label :starts_at, "Starts At", class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.datetime_local_field :starts_at, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300", required: true %>
    </div>

    <div class="col-span-2">
      <%= form.submit "Update Event", class: "inline-block bg-blue-600 text-white px-8 py-3 rounded-lg shadow-md hover:bg-blue-700 transition duration-300 ease-in-out" %>
    </div>
  <% end %>
</div>
