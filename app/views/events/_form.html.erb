<%= form_with(model: event, class: "grid grid-cols-2 gap-6") do |form| %>
  <div>
    <%= form.label :name, class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.text_field :name, autofocus: true, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300 #{'border-red-500' if event.errors[:name].any?}", required: false %>
    <% if event.errors[:name].any? %>
      <p class="text-red-500 text-xs italic"><%= event.errors[:name].first %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :price, class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.number_field :price, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300 #{'border-red-500' if event.errors[:price].any?}", required: false %>
    <% if event.errors[:price].any? %>
      <p class="text-red-500 text-xs italic"><%= event.errors[:price].first %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :location, class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.text_field :location, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300 #{'border-red-500' if event.errors[:location].any?}", required: false %>
    <% if event.errors[:location].any? %>
      <p class="text-red-500 text-xs italic"><%= event.errors[:location].first %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :capacity, class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.number_field :capacity, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300 #{'border-red-500' if event.errors[:capacity].any?}", required: false %>
    <% if event.errors[:capacity].any? %>
      <p class="text-red-500 text-xs italic"><%= event.errors[:capacity].first %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :starts_at, "Starts At", class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.datetime_local_field :starts_at, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300 #{'border-red-500' if event.errors[:starts_at].any?}", required: false %>
    <% if event.errors[:starts_at].any? %>
      <p class="text-red-500 text-xs italic"><%= event.errors[:starts_at].first %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :image_file_name, class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.text_field :image_file_name, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300 #{'border-red-500' if event.errors[:image_file_name].any?}", required: false %>
    <% if event.errors[:image_file_name].any? %>
      <p class="text-red-500 text-xs italic"><%= event.errors[:image_file_name].first %></p>
    <% end %>
  </div>

  <div class="col-span-2">
    <%= form.label :description, class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.text_area :description, class: "form-textarea w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300 #{'border-red-500' if event.errors[:description].any?}", rows: 7, required: false %>
    <% if event.errors[:description].any? %>
      <p class="text-red-500 text-xs italic"><%= event.errors[:description].first %></p>
    <% end %>
  </div>

  <div class="col-span-2">
    <%= form.submit class: "inline-block bg-blue-600 text-white px-8 py-3 rounded-lg shadow-md hover:bg-blue-700 transition duration-300 ease-in-out" %>
  </div>
<% end %>
