<div class="p-8 my-8">
  <h1 class="text-4xl font-extrabold mb-6 text-gray-900"><%= @user.name %>'s Profile</h1>
  <div class="mb-4">
    <%= link_to 'Back to Users', users_path, class: 'inline-block bg-blue-600 text-white px-6 py-2 rounded-lg shadow-md hover:bg-blue-700 transition duration-300 ease-in-out' %>
  </div>
  <div class="bg-white p-6 rounded-lg shadow-md">
    <div class="mb-4">
      <h2 class="text-2xl font-bold text-gray-800 mb-2">User Details</h2>
      <p class="text-sm text-gray-500 mb-1">Name: <span class="font-medium text-gray-700"><%= @user.name %></span></p>
      <p class="text-sm text-gray-500 mb-1">Email: <span class="font-medium text-gray-700"><%= mail_to(@user.email) %></span></p>
      <p class="text-sm text-gray-500 mb-1">Created At: <span class="font-medium text-gray-700"><%= @user.created_at.strftime('%B %d, %Y') %></span></p>
      <p class="text-sm text-gray-500 mb-1">Updated At: <span class="font-medium text-gray-700"><%= @user.updated_at.strftime('%B %d, %Y') %></span></p>
    </div>

    <% if current_user == @user %>
      <div class="flex justify-start space-x-4">
        <%= link_to 'Edit', edit_user_path(@user), class: 'inline-block bg-yellow-600 text-white px-6 py-2 rounded-lg shadow-md hover:bg-yellow-700 transition duration-300 ease-in-out' %>
        <%= link_to 'Delete', @user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'inline-block bg-red-600 text-white px-6 py-2 rounded-lg shadow-md hover:bg-red-700 transition duration-300 ease-in-out' %>
      </div>
    <% end %>
  </div>
</div>
