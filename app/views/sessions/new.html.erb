<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-semibold mb-6">Sign In</h1>

  <%= form_with(url: session_path, class: "space-y-4") do |form| %>
    <div>
      <%= form.label :email, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.email_field :email, autofocus: true, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.password_field :password, class: "form-input w-full rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition duration-300"%>
    </div>

    <div>
      <%= form.submit "Sign In", class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-blue-700 transition duration-300 ease-in-out" %>
    </div>
  <% end %>
</div>
