<header class="bg-white shadow">
  <div class="container mx-auto px-5 py-4 flex justify-between items-center">
    <div class="flex items-center space-x-6">
      <%# <img src="/path/to/logo.png" alt="Logo" class="h-10 w-10"> %>
      <a href="/" class="text-xl font-semibold text-gray-900">Eventz</a>
      <%= link_to "All Events", events_path, class: "text-gray-800 hover:text-gray-600" %>
      <!-- Add more links here as needed -->
    </div>
    <div class="flex items-center space-x-4">
      <% if current_user %>
        <p><%= link_to current_user.name, current_user %></p>
        <p><%= link_to "Sign Out", session_path, data: {turbo_method: :delete}, class: "text-gray-800 hover:text-gray-600 px-4 py-2 rounded-lg border border-gray-800 transition duration-300 ease-in-out" %></p>
      <% else %>
        <%= link_to "Sign Up", signup_path, class: "text-gray-800 hover:text-gray-600 px-4 py-2 rounded-lg border border-gray-800 transition duration-300 ease-in-out" %>
        <%= link_to "Sign In", new_session_path, class: "text-gray-800 hover:text-gray-600 px-4 py-2 rounded-lg border border-gray-800 transition duration-300 ease-in-out" %>
      <% end %>
    </div>
  </div>
</header>
