<% flash.each do |type, message| %>
  <% alert_class = case type.to_sym
                   when :notice then "bg-green-100 border-green-500 text-green-700"
                   when :alert then "bg-red-100 border-red-500 text-red-700"
                   when :warning then "bg-yellow-100 border-yellow-500 text-yellow-700"
                   else "bg-blue-100 border-blue-500 text-blue-700"
                   end %>
  <div class="max-w-3xl mx-auto my-4 p-4 border-l-4 rounded-lg shadow-sm <%= alert_class %>">
    <p class="font-medium"><%= message %></p>
  </div>
<% end %>
