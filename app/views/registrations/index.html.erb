<!-- app/views/registrations/index.html.erb -->
<div class="container mx-auto py-12">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-extrabold text-gray-900 mb-6">Registrations for <%= link_to @event.name, @event, class: "text-blue-600 hover:underline" %></h1>
  </div>

  <table class="min-w-full bg-white rounded-lg shadow-md">
    <thead>
      <tr>
        <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-700">Name</th>
        <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-700">Email</th>
        <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-700">How Heard</th>
      </tr>
    </thead>
    <tbody>
      <% @registrations.each do |registration| %>
        <tr>
          <td class="py-2 px-4 border-b border-gray-200"><%= registration.name %></td>
          <td class="py-2 px-4 border-b border-gray-200"><%= registration.email %></td>
          <td class="py-2 px-4 border-b border-gray-200"><%= registration.how_heard %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
